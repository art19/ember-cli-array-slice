<h2>Limit proxy test</h2>

<ul id="output">
	{{#each val in output}}
		<li>{{val}}</li>
	{{/each}}
</ul>

<style>
#output {
	height: 275px;
	overflow: auto;
}
</style>

<h3>Limit ({{output.limit}})</h3>

<div class="buttons">
	<button {{action 'limit' -2}}>-2</button>
	<button {{action 'limit' -1}}>-1</button>
	<button {{action 'limit' 1}}>+1</button>
	<button {{action 'limit' 2}}>+2</button>
</div>

<h3>Items ({{input.length}})</h3>

<div class="buttons">
	<button {{action 'items' -2}}>-2</button>
	<button {{action 'items' -1}}>-1</button>
	<button {{action 'items' 1}}>+1</button>
	<button {{action 'items' 2}}>+2</button>
</div>
